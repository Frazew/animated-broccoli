\definecolor{background}{HTML}{282828}
\definecolor{foreground}{HTML}{EDDBB2}
\definecolor{whitee}{HTML}{A89984}
\definecolor{redd}{HTML}{FB4934}
\definecolor{yelloww}{HTML}{FABD2F}
\definecolor{greenn}{HTML}{98971A}

\setbeamercolor*{background canvas}{bg=background}
\setbeamercolor*{normal text}{fg=whitee}
\setbeamercolor*{alerted text}{fg=redd}
\setbeamercolor*{structure}{fg=yelloww}
\setbeamercolor*{title}{fg=yelloww}
\setbeamercolor*{itemize item}{fg=foreground}
\setbeamercolor*{enumerate item}{fg=foreground}
\setbeamercolor{titlelike}{parent=structure}
\setbeamercolor{frametitle}{fg=greenn}


\setbeamertemplate{sections/subsections in toc}[sections numbered]{}
