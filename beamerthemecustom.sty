% Font configuration
\usepackage{fontspec}
\setsansfont[ExternalLocation=fonts/,
              UprightFont=*-Regular,
              BoldFont=*-Bold,
              ItalicFont=*-Italic,
              BoldItalicFont=*-BoldItalic]{Hack}


% Stucture configuration
\setbeamertemplate{sections/subsections in toc}[sections numbered]{}
\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{qed symbol}{}


\newbox\datbox
\newbox\datboxx

\logo{\includegraphics[height=1.3cm]{images/minet.png}\vspace{220pt}}
\setbeamertemplate{frametitle}{\boldmath\insertframetitle}
\setbeamertemplate{headline}{
  \setbox\datbox\hbox{/\insertsection\ifx\insertsubsection\@empty\else/\insertsubsection\fi}
  \ht\datbox=1mm\dp\datbox=0mm
  \vspace{5.2mm}
  \hspace{2mm}\noindent\box\datbox\hspace{2mm}
  \vspace{1.3mm}

}
\setbeamertemplate{footline}{
  \setbox\datbox\hbox{[\insertauthor @\insertinstitute$\colon$\char"7E /\inserttitle]\$}
  \setbox\datboxx\hbox{[\insertframenumber/\inserttotalframenumber]}
  \ht\datbox=1mm\dp\datbox=0mm
  \ht\datboxx=1mm\dp\datboxx=0mm
  \vspace{5.2mm}
  \hspace{2mm}\noindent\box\datbox\hfill\box\datboxx\hspace{2mm}
  \vspace{1.3mm}
}
\setbeamertemplate{title page}{
  \renewcommand\thefootnote{\fnsymbol{footnote}}
  \setcounter{footnote}{1} % \dagger
  \noindent {\usebeamerfont{title}\$ \usebeamercolor[fg]{title}\bfseries\boldmath\inserttitle}
  \ifx\insertsubtitle\@empty\else\\>\hbox{}>\hbox{}> {\usebeamerfont{title}\usebeamercolor[fg]{title}\insertsubtitle}\fi~\\[1em]
  > \insertauthor\ \ifx\insertinstitute\@empty\else(\insertinstitute)\fi\\
  > \insertdate
  \renewcommand\thefootnote{\arabic{footnote}}
  \setcounter{footnote}{0}
}
